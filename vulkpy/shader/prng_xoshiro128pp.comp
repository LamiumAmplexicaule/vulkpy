  if(i+params.shift >= params.size){ return; }
  uint j = 4 * i;

  uint result = rotl(a[j] + a[j+3], 7) + a[j];
  b[i+params.shift] = uintBitsToFloat((result >> 9) | 0x3f800000) - 1.0;

  uint t = (a[j+1] << 9);

  a[j+2] ^= a[j  ];
  a[j+3] ^= a[j+1];
  a[j+1] ^= a[j+2];
  a[j  ] ^= a[j+3];

  a[j+2] ^= t;
  a[j+3] = rotl(a[j+3], 11);
}
