  uint size;
} params;


layout(std430, binding = 0) buffer A {
  uint a[];
};
layout(std430, binding = 1) writeonly buffer B {
  float b[];
};


uint rotl(uint x, int k){
  return (x << k) | (x >> (32 - k));
}


